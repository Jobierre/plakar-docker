{{template "base" .}}

{{define "title"}}Plakar{{end}}

{{define "main"}}
    {{$Store := .Store}}
    {{$Snapshots := .Snapshots}}
    <h1>Snapshots</h1>
    {{if len $Snapshots }}
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Uuid</th>
                <th scope="col">Username</th>
                <th scope="col">Hostname</th>
                <th scope="col">Date</th>
                <th scope="col">Directories</th>
                <th scope="col">Files</th>
                <th scope="col">Size</th>
            </tr>
        </thead>
        <tbody>
            {{range $snapshot := $Snapshots}}
            <tr>
                <th scope="row"><a href="/snapshot/{{$snapshot.Uuid}}:/">{{slice $snapshot.Uuid  0 8}}</a></th>
                <td>{{$snapshot.Username }}</td>
                <td>{{$snapshot.Hostname }}</td>
                <td>{{$snapshot.CreationTime }}</td>
                <td>{{$snapshot.Directories}}</td>
                <td>{{$snapshot.Files}}</td>
                <td>{{$snapshot.HumanSize }}</td>
            </tr>
            {{end}}
        </tbody>
    </table>
    {{end}}
{{end}}