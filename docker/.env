# Default configuration values for docker-compose.yml
# Override these by editing this file before running `docker compose up`.

# Plakar release to install (use a tagged version like v1.0.0 or keep latest)
PLAKAR_VERSION=latest

# CPU architecture for the Debian package (amd64, arm64, etc.)
PLAKAR_ARCH=arm64

# Commande lancée automatiquement au démarrage du conteneur. Vous pouvez
# inclure ou non le préfixe « plakar ».
# Exemple: PLAKAR_STARTUP_COMMAND="plakar scheduler start -tasks ./scheduler.yaml"
PLAKAR_STARTUP_COMMAND=plakar scheduler start -tasks ./scheduler.yaml

# L’ancienne variable reste supportée pour compatibilité.
PLAKAR_COMMAND=
